{
  "extends": ["standard", "standard-jsx"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "strict": 0,
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "ignore"
    }],
    "key-spacing": ["error", {
      "singleLine": {
        "beforeColon": true,
        "afterColon": true
      },
      "multiLine": {
        "beforeColon": false,
        "afterColon": true
      }
    }],
    "jsx-quotes": [ "error",
      "prefer-double"
    ]
  }
}